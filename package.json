{
  "name": "quote-notes",
  "version": "1.0.0",
  "main": "index.js",
  "private": true,
  "repository": "git@github.com:dslemay/quote-notes.git",
  "author": "Daniel Lemay <26767995+dslemay@users.noreply.github.com>",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "fmt:ts": "prettier --write 'packages/**/*.{ts,tsx}'",
    "fmt:js": "prettier --write 'packages/**/*.{js,jsx}'",
    "lint:ts": "tslint --fix 'packages/**/*.{ts,tsx}'",
    "lint:js": "eslint --fix 'packages/**/*.{js,jsx}'",
    "ci": "yarn fmt:ts && yarn lint:ts"
  },
  "lint-staged": {
    ".ts,.tsx": [
      "tslint --fix",
      "prettier --write",
      "git add"
    ],
    ".js,.jsx": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.12.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^22.1.2",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.3",
    "husky": "^1.2.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.2.2"
  },
  "dependencies": {
    "@types/jest": "^23.3.10",
    "@types/node": "^10.12.12",
    "jest": "^23.6.0"
  }
}
